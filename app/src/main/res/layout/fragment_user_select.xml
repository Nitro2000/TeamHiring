<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.mainFragments.UserSelectFragment"
        >


        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="@dimen/space_32"
            android:layout_height="@dimen/space_32"
            android:src="@drawable/icon_back"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginLeft="@dimen/space_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/blue_500" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Select User Type"
            android:textColor="@color/black"
            android:textSize="@dimen/text_32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="296dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/image_select_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="I am "
            android:textSize="@dimen/text_18"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/space_24"
            />


        <TextView
            android:id="@+id/userSelectRecruiterBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/space_24"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginRight="@dimen/space_24"
            android:background="@drawable/bg_button_login"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Recruiter"
            android:backgroundTint="@color/blue_700"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userSelectRecruiterBtn"
            android:orientation="horizontal">

            <View
                android:id="@+id/divider"
                android:layout_width="150dp"
                android:layout_height="1.5dp"
                android:layout_marginRight="8dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:paddingTop="3dp"
                />

            <View
                android:id="@+id/divider1"
                android:layout_width="150dp"
                android:layout_height="1.5dp"
                android:layout_marginLeft="8dp"
                android:background="?android:attr/listDivider" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--            <TextView-->
        <!--                android:id="@+id/textView5"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_marginTop="16dp"-->
        <!--                android:fontFamily="@font/roboto_medium"-->
        <!--                android:text="or"-->
        <!--                android:textSize="@dimen/text_18"-->
        <!--                app:layout_constraintEnd_toEndOf="parent"-->
        <!--                app:layout_constraintStart_toStartOf="parent"-->
        <!--                app:layout_constraintTop_toBottomOf="@+id/userSelectRecruiterBtn" />-->

        <TextView
            android:id="@+id/userSelectSeekerBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_50"
            android:layout_marginLeft="@dimen/space_24"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/space_24"
            android:background="@drawable/bg_edit_text"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Job Seeker"
            android:backgroundTint="@color/light_grey"
            android:textColor="@color/blue_700"
            android:textSize="@dimen/text_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/userSLNextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_24"
            android:background="@drawable/bg_button_login"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:layout_marginRight="@dimen/space_24"
            android:padding="@dimen/space_4"
            android:text="Continue"
            android:textAllCaps="false"
            android:paddingStart="@dimen/space_8"
            android:paddingEnd="@dimen/space_8"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userSelectSeekerBtn"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>