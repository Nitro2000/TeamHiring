<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.mainFragments.OtpFragment">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="@dimen/space_32"
                android:layout_height="@dimen/space_32"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginTop="@dimen/space_16"
                android:src="@drawable/icon_back"
                app:tint="@color/blue_500" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="88dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Your Verification Code"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="We have sent 6 digits OTP to below Mobile Number."
                  />

                <TextView
                    android:id="@+id/sendingOTPOn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_45"
                    android:text="+91-9079298775"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/text_18"
                   />

                <com.chaos.view.PinView
                    android:id="@+id/otpView"
                    style="@style/PinWidget.PinView"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_50"
                    android:layout_gravity="start"
                    android:layout_marginTop="4dp"
                    android:cursorVisible="true"
                    android:hint=""
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="0dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:cursorWidth="0dp"
                    app:hideLineWhenFilled="true"
                    app:itemCount="6"
                    app:itemHeight="42dp"
                    app:itemRadius="6dp"
                    app:itemSpacing="8dp"
                    app:itemWidth="40dp"
                    app:lineColor="#F6F5F5"
                    app:lineWidth="2dp"
                    android:itemBackground="@drawable/bg_edit_text"
                    app:viewType="rectangle" />



                <TextView
                    android:id="@+id/btnOTPVerification"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/bg_button_login"
                    android:paddingLeft="32dp"
                    android:paddingTop="8dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:textSize="@dimen/space_18"
                    android:text="Verify"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/divider"
                        android:layout_width="150dp"
                        android:layout_height="1.5dp"
                        android:layout_marginRight="8dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:paddingTop="3dp"
                        />

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="150dp"
                        android:layout_height="1.5dp"
                        android:layout_marginLeft="8dp"
                        android:background="?android:attr/listDivider" />
                </androidx.appcompat.widget.LinearLayoutCompat>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Didn't receive" />

                    <TextView
                        android:id="@+id/resendVerificationCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_500"
                        android:text=" RESEND"/>
                         </LinearLayout>



            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>
</layout>