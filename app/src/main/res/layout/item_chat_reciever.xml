<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:gravity="start"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/space_8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_reciever"
            android:gravity="start"
            android:elevation="3dp"
            android:paddingStart="@dimen/space_16"
            android:paddingEnd="@dimen/space_16"
            android:paddingTop="@dimen/space_8"
            android:paddingBottom="@dimen/space_8"
            android:layout_marginStart="@dimen/space_2"
            android:layout_marginTop="@dimen/space_2"
            android:layout_marginBottom="@dimen/space_2"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/space_64"
            android:visibility="visible">

            <TextView
                android:id="@+id/itemChatMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="I am interested in this job. And i believe my qualification is suitable for this job"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/itemChatTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="12:30 pm"
            android:gravity="start"
            android:layout_marginStart="@dimen/space_2"
            android:textColor="@color/gray_400"
            android:textSize="10sp"
            android:layout_marginTop="@dimen/space_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</layout>